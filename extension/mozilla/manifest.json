{
    "manifest_version": 2,
    "name": "@EXTENSION_NAME@",
    "description": "@EXTENSION_DESC@",
    "version": "@EXTENSION_VERSION@",
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "icons": {
        "48": "icons/icon-48.png"
    },

    "applications": {
        "gecko": {
            "strict_min_version": "54.0"
        }
    },

    "background": {
        "scripts": [ "background.js" ]
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "48": "icons/icon-48.png"
        },
        "default_title": "@EXTENSION_NAME@ - Button here"
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "notifications"
    ]
}
